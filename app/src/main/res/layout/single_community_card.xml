<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounsed_bg"
    android:elevation="3dp"
    android:orientation="vertical">


    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/iv_communityPostBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:siShape="@drawable/rounded_bg_black"
        app:siSquare="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".3"
        android:background="@drawable/rounded_bg_black"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_star_gold_18dp"/>

        <TextView
            android:id="@+id/tv_communityPostRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.9"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:src="@drawable/ic_add_circle_light_green_a400_18dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_communityLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="1dp"/>


        <TextView
            android:id="@+id/tv_communityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pewdiepi"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_communityContentText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:maxLines="3"
        android:padding="8dp"
        android:text="hello this is line one two three check check check testing one two three"
        android:textColor="@android:color/white"
        android:textSize="8sp"/>

</RelativeLayout>